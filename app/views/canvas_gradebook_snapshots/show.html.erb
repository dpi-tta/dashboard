<%= render "cohorts/tabs" %>
<div class="row mb-3">
  <div class="col-lg-12 mb-3">
    <div class="d-flex justify-content-between">
      <%= render @canvas_gradebook_snapshot %>
      <div>
        <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#biweeklyReportModal">
          <i class="fa-solid fa-chart-line me-2"></i>Send Biweekly Reports
        </button>
        <%= link_to cohort_canvas_gradebook_snapshot_url(@canvas_gradebook_snapshot.cohort, @canvas_gradebook_snapshot, format: :csv), class: "btn btn-outline-primary me-2" do %>
          <i class="fa-solid fa-file-csv"></i>
        <% end %>
        <% if policy(@canvas_gradebook_snapshot).destroy? %>
          <%= link_to cohort_canvas_gradebook_snapshot_url(@canvas_gradebook_snapshot.cohort, @canvas_gradebook_snapshot), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure? This is NOT reversible" }, class: "btn btn-outline-danger" do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "table", canvas_gradebook_snapshot: @canvas_gradebook_snapshot %>

<div class="modal fade" id="biweeklyReportModal" tabindex="-1" aria-labelledby="biweeklyReportModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="biweeklyReportModalLabel">Send Biweekly Reports</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: send_biweekly_reports_cohort_canvas_gradebook_snapshot_path(@cohort, @canvas_gradebook_snapshot), method: :post, id: "biweeklyReportForm", data: { turbo: false } do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <label for="startDate" class="form-label">Start Date</label>
            <%= f.date_field :start_date, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <label for="endDate" class="form-label">End Date</label>
            <%= f.date_field :end_date, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <label class="form-label">Due Assignments</label>
            <div class="list-group" id="assignmentsList">
              <% @canvas_gradebook_snapshot.canvas_assignments.each do |assignment| %>
                <div class="list-group-item">
                  <div class="form-check">
                    <%= f.check_box "assignments[]", { multiple: true }, assignment.id, nil %>
                    <%= f.label "assignment_#{assignment.id}", assignment.name, class: "form-check-label" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Send Reports", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const today = new Date();
      const twoWeeksAgo = new Date(today);
      twoWeeksAgo.setDate(today.getDate() - 14);

      document.getElementById('canvas_gradebook_snapshot_start_date').value = twoWeeksAgo.toISOString().split('T')[0];
      document.getElementById('canvas_gradebook_snapshot_end_date').value = today.toISOString().split('T')[0];
    });
  </script>
<% end %>
