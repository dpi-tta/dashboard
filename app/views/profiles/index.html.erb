<%= render "cohorts/tabs" %>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h1 class="h6 mb-0 me-auto">Students</h1>

        <% if policy(Enrollment).create? %>
          <%= link_to new_cohort_enrollment_path(@cohort) do %>
            <i class="fa-solid fa-plus fa-fw"></i>
          <% end %>
        <% end %>
      </div>

      <ul class="list-group list-group-flush">
        <% @profiles.each do |profile| %>
          <li class="list-group-item">
            <div class="d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#profile-<%= profile.id %>-links" aria-expanded="false" aria-controls="profile-<%= profile.id %>-links">
              <div class="me-auto d-flex align-items-baseline font-monospace">
                <%= profile.to_s %>
              </div>
              <div>
                <i class="fa-solid fa-chevron-right fa-fw"></i>
              </div>
            </div>
            <div class="collapse" id="profile-<%= profile.id %>-links">
              <ul class="list-unstyled my-2 ms-2">
                <li>
                  <%= link_to "Overview", cohort_profile_path(@cohort, profile), class: "text-black" %>
                </li>
                <li>
                  <%= link_to "Snapshot", snapshot_cohort_profile_path(@cohort, profile), class: "text-black" %>
                </li>
              </ul>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
