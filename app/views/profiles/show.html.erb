<div class="bg-dpi py-5">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <% if @enrollment.github_username.present? %>
        <div class="col-8 col-lg-3 mb-4 d-flex align-items-center">
          <div class="profile-pic-container">
            <div class="profile-pic-wrapper">
              <%= image_tag("/profile_pics/#{@enrollment.github_username}.jpeg", class: "border border-5 rounded-circle")%>    
            </div>
          </div>
        </div>
      <% end %>

      <div class="col-lg-6 d-flex align-items-center">
        <div>
          <h1 class="display-1 text-white text-md-start text-center mb-3">
            <%= @enrollment %>
          </h1>

          <div class="row mb-4 text-white text-md-start text-center">
            <div class="col-md-6">
              <%= @cohort.started_on.strftime("%B %Y") %> Cohort
            </div>

            <div class="col-md-6 text-md-end text-center">
              <% if @enrollment.personal_website.present? %>
                <%= link_to @enrollment.personal_website, @enrollment.personal_website, class: "text-white" %>
              <% end %>
            </div>
          </div>

          <p class="lead text-white border-start border-3 ps-4 fst-italic">
            <%= @enrollment.quote %>
          </p>
        </div>
      </div>
    </div>

    <div class="row d-flex justify-content-center mt-5 text-white text-center">
      <% if @enrollment.most_recent_role.present? %>
        <div class="col-md-3">
          <h4 class="h6">
            Most recent role
          </h4>

          <p class="lead">
            <%= simple_format @enrollment.most_recent_role %>
          </p>
        </div>        
      <% end %>

      <% if @enrollment.education.present? %>
        <div class="col-md-3">
          <h4 class="h6">
            Education
          </h4>

          <p class="lead">
            <%= simple_format @enrollment.education %>
          </p>
        </div>
      <% end %>
  
      <% if @enrollment.strengths.present? %>
        <div class="col-md-3">
          <h4 class="h6">
            Strengths
          </h4>

          <p class="lead">
            <%= simple_format @enrollment.strengths %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-center my-5 text-center">
    <div class="col-md-3 d-flex mb-3">
      <div class="card flex-fill">
        <div class="card-body d-flex flex-column">
          <h4 class="h6 flex-grow-0 m-0 h-25">
            Career readiness rating
          </h4>

          <div class="flex-grow-1 d-flex align-items-center justify-content-center">
            <p class="lead text-<%= rating_class(@enrollment.career_rating)%> m-0">
              <%= @enrollment.career_rating.to_s.titlecase %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 d-flex mb-3">
      <div class="card flex-fill">
        <div class="card-body d-flex flex-column">
          <h4 class="h6 flex-grow-0 m-0 h-25">
            Communication skills rating
          </h4>

          <div class="flex-grow-1 d-flex align-items-center justify-content-center">
            <p class="lead text-<%= rating_class(@enrollment.communication_rating)%> m-0">
              <%= @enrollment.communication_rating.to_s.titlecase %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 d-flex mb-3">
      <div class="card flex-fill">
        <div class="card-body d-flex flex-column">
          <h4 class="h6 flex-grow-0 m-0 h-25">
            Technical skills rating
          </h4>

          <div>
            
          </div>

          <div class="flex-grow-1 d-flex flex-column align-items-center gap-2 justify-content-center">
            <p class="lead text-<%= rating_class(@enrollment.technical_rating)%> m-0">
              <%= @enrollment.technical_rating.to_s.titlecase %>
            </p>

            <%= image_tag("/tech_velocities/#{@enrollment.github_username}.png", class: "img-fluid")%>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center my-5 text-center">
    <div class="col-md-3 d-flex mb-3">
      <div class="card flex-fill">
        <div class="card-body">
          <h4 class="h6 text-center">
            Emotional intelligence
          </h4>

          <p class="lead">
            <%= simple_format @enrollment.emotional_intelligence %>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-3 d-flex mb-3">
      <div class="card flex-fill">
        <div class="card-body">
          <h4 class="h6 text-center">
            Staff evaluation
          </h4>

          <p>
            <em>Strengths:</em>
            
            <%= simple_format @enrollment.staff_strengths %>
          </p>

          <p>            
            <em>Areas for growth:</em>

            <%= simple_format @enrollment.staff_areas_for_growth %>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-3 d-flex mb-3">
      <div class="card flex-fill">
        <div class="card-body">
          <h4 class="h6 text-center">
            Skills developed
          </h4>

          <div>
            <em>HTML:</em> <%= @enrollment.most_advanced_completed_project_for(:html).html %>

            <div class="text-muted">
              <%= @enrollment.most_advanced_completed_project_for(:html).name %>
            </div>
          </div>

          <div>
            <em>CSS:</em> <%= @enrollment.most_advanced_completed_project_for(:css).css %>

            <div class="text-muted">
              <%= @enrollment.most_advanced_completed_project_for(:css).name %>
            </div>
          </div>

          <div>
            <em>Ruby:</em> <%= @enrollment.most_advanced_completed_project_for(:ruby).ruby %>

            <div class="text-muted">
              <%= @enrollment.most_advanced_completed_project_for(:ruby).name %>
            </div>
          </div>

          <div>
            <em>Ruby on Rails:</em> <%= @enrollment.most_advanced_completed_project_for(:rails).rails %>

            <div class="text-muted">
              <%= @enrollment.most_advanced_completed_project_for(:rails).name %>
            </div>
          </div>

          <div>
            <em>Relational databases:</em> <%= @enrollment.most_advanced_completed_project_for(:databases).databases %>

            <div class="text-muted">
              <%= @enrollment.most_advanced_completed_project_for(:databases).name %>
            </div>
          </div>

          <div>
            <em>Authorization & authentication:</em> <%= @enrollment.most_advanced_completed_project_for(:authentication).authentication %>

            <div class="text-muted">
              <%= @enrollment.most_advanced_completed_project_for(:authentication).name %>
            </div>
          </div>

          <div>
            <em>JavaScript & Ajax:</em> <%= @enrollment.most_advanced_completed_project_for(:javascript).javascript %>

            <div class="text-muted">
              <%= @enrollment.most_advanced_completed_project_for(:javascript).name %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

