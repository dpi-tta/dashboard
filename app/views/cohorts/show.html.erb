<%= render "cohorts/tabs" %>

<div class="row mb-3">
  <div class="col-lg-12 mb-3">
    <div class="d-flex justify-content-end">
      <%= link_to "Back to cohorts", cohorts_path, class: "btn btn-outline-secondary me-2" %>

