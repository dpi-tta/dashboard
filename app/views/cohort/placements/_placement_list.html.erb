<div class="list-group list-group-flush">
  <% @placements.each do |placement| %>
    <%= turbo_frame_tag dom_id(placement) do %>
      <div class="list-group-item">
        <div class="d-flex align-items-center">
          <div class="flex-grow-1 d-block text-decoration-none" data-bs-toggle="collapse" href="#collapse_<%= dom_id(placement) %>" role="button" aria-expanded="false" aria-controls="collapse_<%= dom_id(placement) %>">
            <div class="row align-items-center">
              <div class="col-4 col-sm-2">
                <img class="headshot-bound-thumb" src="<%= placement.user.headshot %>">
              </div>
              <div class="col-8 col-sm-9 col-xxl-10">
                <h5>
                  <strong><%= placement.job_description.title %></strong> - <%= placement.company.name %>
                </h5>
                  <% if placement.by_dpi? %>
                    <%= image_tag "logo.svg", class: "dpi-badge" %>
                  <% end %>
                <div><%= placement.user %></div>
              </div>
            </div>
          </div>
          <% if policy(placement).edit? %>
            <%= link_to edit_cohort_placement_path(@cohort, placement), class: "ms-2 text-decoration-none", data: { turbo: false } do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
          <% end %>
        </div>

        <div id="collapse_<%= dom_id(placement) %>" class="collapse">
          <div class="mt-3">
            <%= turbo_frame_tag "placement" do %>
              <% if placement %>
                <%= render "cohort/placements/placement", placement: placement %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
