<%= render "cohorts/tabs" %>

<div class="row">
  <div class="col-lg-6">
    <div class="card shadow-sm mb-4">
      <div class="card-header d-flex align-items-center">
        <h1 class="h6 mb-0">
          <%= @channel[:name].to_s.capitalize %> Discord Channel for <%= @cohort.name %>
        </h1>
      </div>
      <div class="card-body">
        <p class="mb-2">
          <strong>Topic:</strong>
          <%= @channel[:topic].presence || "No topic set" %>
        </p>
        <p>
          <strong>Channel ID:</strong>
          <%= @channel[:id] %>
        </p>
      </div>
    </div>

    <div class="card shadow-sm mb-4">
      <div class="card-header">
        <h2 class="h6 mb-0">Scheduled Recurring Messages</h2>
      </div>
      <div class="card-body">
        <% if @cohort.recurring_messages.any? %>
          <ul class="list-group">
            <% @cohort.recurring_messages.each do |message| %>
              <li class="list-group-item">
                <p class="mb-1"><%= message.message_content %></p>
                <small class="text-muted">
                  <% message.days_of_week.each do |day| %>
                    <span><%= day.titleize %></span>
                  <% end %>
                  at <%= message.scheduled_time.strftime("%I:%M %p") %>
                </small>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">No recurring messages scheduled.</p>
        <% end %>
      </div>
    </div>

    <div class="card shadow-sm mb-4">
      <div class="card-header">
        <h2 class="h6 mb-0">Schedule Recurring Message</h2>
      </div>
      <div class="card-body">
        <%= form_with model: @recurring_message,
                url: recurring_messages_cohort_discord_path(@cohort, id: @channel[:id]),
                method: :post,
                local: true do |f| %>
          <%= f.hidden_field :channel_id %>

          <div class="mb-3">
            <%= f.label :message_content, "Message Content", class: "form-label" %>
            <%= f.text_area :message_content, 
            class: "form-control", 
            rows: 3,
            value: flash[:params]&.dig(:message_content) %>
          </div>

          <div class="mb-3">
            <%= f.label :scheduled_time, "Send Time", class: "form-label" %>
            <%= f.time_field :scheduled_time,
            value: flash[:params]&.dig(:scheduled_time) || @recurring_message&.scheduled_time,
            class: "form-control" %>
          </div>

          <div class="mb-3">
            <label class="form-label">Repeat On</label>
            <div class="days-checkboxes">
              <% RecurringMessage::DAYS.each do |day| %>
                <div class="form-check form-check-inline">
                  <%= f.check_box :days_of_week, 
                  { multiple: true, 
                    class: "form-check-input",
                    checked: @recurring_message&.days_of_week&.include?(day) }, 
                  day, 
                  nil %>
                  <%= f.label "days_of_week_#{day}", day.titleize, class: "form-check-label" %>
                </div>
              <% end %>
            </div>
          </div>

          <%= f.submit "Schedule", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card shadow-sm mb-4">
      <div class="card-header">
        <h2 class="h6 mb-0">Top Contributors (Last 50 Messages)</h2>
      </div>
      <div class="card-body">
        <% if @top_contributors.any? %>
          <ul class="list-group">
            <% @top_contributors.each do |contributor| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>@<%= contributor[:author_username] %></strong></span>
                <span class="badge bg-primary rounded-pill"><%= contributor[:message_count] %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">No contributors found.</p>
        <% end %>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-header">
        <h2 class="h6 mb-0">Recent Messages</h2>
      </div>
      <div class="card-body">
        <% if @recent_messages.any? %>
          <ul class="list-group">
            <% @recent_messages.each do |msg| %>
              <li class="list-group-item">
                <p class="mb-1">
                  <strong>@<%= msg[:author_username] %>:</strong> <%= msg[:content] %>
                </p>
                <small class="text-muted"><%= msg[:timestamp].strftime("%b %d, %Y %I:%M %p") %></small>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">No recent messages found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
