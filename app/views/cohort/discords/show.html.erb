<%= render "cohorts/tabs" %>

<div class="row mb-3">
  <div class="col">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h1 class="h6 mb-0 me-auto">Discord Channels for <%= @cohort.name %></h1>
        </div>

        <div class="list-group list-group-flush">
          <% @channels.each do |channel| %>
            <%= link_to "/", class: "list-group-item" do %>
              <div class="d-flex">
                <div class="me-auto d-flex align-items-baseline font-monospace">
                  <%= channel[:name].to_s %>
                </div>

                <div>
                  <i class="fa-solid fa-chevron-right fa-fw"></i>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>