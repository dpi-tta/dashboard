<%= render "cohorts/tabs" %>
<%# TODO: make this a ransack sortable/searchable table with pagination %>
<div class="row">
 <%= search_form_for(@q, url: cohort_impressions_path) do |f| %>
  <p>Narrow results:</p>

  <div>
    <%= f.label :content_cont, "Content contains" %>
    <%= f.text_field :content_cont, placeholder: "Enter content" %>
  </div>
  
  <div>
    <%= f.label :author_first_name_or_author_last_name_cont, "Author Name contains" %>
    <%= f.text_field :author_first_name_or_author_last_name_cont, placeholder: "Search by Author Name" %>
  </div>

  <div>
    <%= f.label :subject_first_name_or_subject_last_name_cont, "Subject Name contains" %>
    <%= f.text_field :subject_first_name_or_subject_last_name_cont, placeholder: "Search by Subject Name" %>
  </div>

  <%= f.submit class: "btn btn-primary btn-block" %>
  <%= link_to "Clear filter", cohort_impressions_path, class: "ms-2" %>
<% end %>


</div>
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h1 class="h6 mb-0 me-auto">Impressions</h1>

        <div>
          <%= link_to new_cohort_impression_path(@cohort) do %>
            <i class="fa-solid fa-plus fa-fw"></i>
          <% end %>
        </div>
      </div>

      <div class="list-group list-group-flush">
        <% @impressions.each do |impression| %>
          <%= link_to cohort_impression_path(@cohort, impression), class: "list-group-item" do %>
            <div class="d-flex">
              <div class="me-auto d-flex align-items-baseline">
                <span class="badge bg-secondary font-monospace me-2">
                  <%= impression.emoji %>
                </span>
                
                <%= impression.subject %>

                <span class="text-secondary ms-1">
                  from <%= impression.author %>
                </span>
              </div>
  
              <div>
                <i cladsass="fa-solid fa-chevron-right fa-fw"></i>
              </div>
            </div>
            
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <%= paginate @impressions, theme: 'bootstrap-5', nav_class: "d-flex my-2", pagination_class: "mx-auto" %>
</div>






