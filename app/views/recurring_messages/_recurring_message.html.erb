<li class="list-group-item d-flex justify-content-between align-items-center">
  <div>
    <p class="mb-1"><%= message.message_content %></p>
    <small class="text-muted">
      <% message.days_of_week.each do |day| %>
        <span class="me-1"><%= day.titleize %></span>
      <% end %>
      at <%= message.scheduled_time.strftime("%I:%M %p") %> | <%= message.frequency %>
    </small>
  </div>
  <div class="btn-group">
    <%= link_to edit_cohort_discord_channel_recurring_message_path(@cohort, @channel[:id], message),
                class: "btn btn-outline-secondary btn-sm", title: "Edit" do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
    <%= button_to cohort_discord_channel_recurring_message_path(@cohort, @channel[:id], message),
              method: :delete,
              form: {
                data: {
                  turbo_confirm: "Are you sure you want to delete this recurring message?",
                }
              },
              class: "btn btn-outline-danger btn-sm",
              title: "Delete" do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</li>
