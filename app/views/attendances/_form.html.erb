<%= form_with model: @attendance, url: @attendance.new_record? ? cohort_attendances_path(@cohort) : cohort_attendance_path(@cohort, @attendance), method: @attendance.new_record? ? :post : :patch, local: true do |form| %>
  
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :category, "Select a Category" %>
    <%= form.select :category, 
        options_for_select([
          ['Riverside'],
          ['Durable Skills Session'],
          ['Retro'],
          ['Office Hours'],
          ['In-Person Office Visit'],
          ['Technical Lecture'],
          ['Mock Interview'],
          ['Staff 1-1'],
          ['TA 1-1'],
          ['Community/Alumni Event'],
          ['Other']
        ], selected: attendance.category), class: 'form-control' %>
  </div>

  <div>
    <h3>Select Students</h3>
    <% @enrollments.each do |enrollment| %>
      <div>
        <%= check_box_tag "enrollment_ids[]", enrollment.id, @attendance.enrollments.include?(enrollment) %>
        <%= enrollment.user.full_name %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>
