<%= render "cohorts/tabs" %>

<p style="color: green"><%= notice %></p>

<h1>Attendances</h1>

<div id="attendances">
  <% @attendances.each do |attendance| %>
    <%= render attendance %>
    <p>
      <%= link_to "Show this attendance", cohort_attendance_path(@cohort, attendance) %>
    </p>
  <% end %>
</div>

<%= link_to "New attendance", new_cohort_attendance_path(@cohort) %>
